{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "prefer-destructuring": ["error", {
      "array": true,
      "object": true
    },
      {
        "enforceForRenamedProperties": false
      }
    ],
    "space-in-parens": "error",
    "no-multi-spaces": "error",
    "space-in-brackets": ["error", "always"],
    "arrow-parens": [
      "error", "as-needed"
    ],
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "react/forbid-prop-types": [
      "error"
    ],
    "no-multiple-empty-lines": "error",
    "indent": ["error",2],
    "react/destructuring-assignment": [
      "error",
      "always",
      { "ignoreClassFields": true }
    ]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}